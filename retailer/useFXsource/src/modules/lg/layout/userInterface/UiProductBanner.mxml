<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="120">
	<fx:Script>
		<![CDATA[
			
			//----------------------------------
			//  uploadBannerPopup
			//----------------------------------
			/**
			 *  Abre popup para publicar banner no servidor
			 * 
			 *  @param event Evento de mouse
			 *  @return void 
			 */
			private function uploadBannerPopup(event:MouseEvent):void
			{
				parentDocument.uploadBannerPopup();
			}
			
		]]>
	</fx:Script>
	
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="5">
		<s:fill>
			<s:SolidColor color="#FFFFFF"/>
		</s:fill>
		<s:filters>
			<s:DropShadowFilter alpha="0.1" angle="45.0" blurX="4.0" blurY="4.0" color="#000000"
								distance="2.0" hideObject="false" inner="false" knockout="false"
								quality="2" strength="1"/>
		</s:filters>
	</s:Rect>
	<s:Image id="imBanner" left="5" right="5" top="5" bottom="5"/>
	<s:Group right="5" bottom="3" width="20" height="20">
		<s:Rect width="100%" height="100%" radiusX="2">
			<s:fill>
				<s:SolidColor color="#333333"/>
			</s:fill>
		</s:Rect>
		<s:Button id="btRemoveBanner" buttonMode="true" enabled="false"
				  skinClass="devdoo.sk.button.iconMini.UiButtonRemoveSkin" useHandCursor="true"/>
	</s:Group>
	<s:Group right="30" bottom="3" width="20" height="20">
		<s:Rect width="100%" height="100%" radiusX="2">
			<s:fill>
				<s:SolidColor color="#333333"/>
			</s:fill>
		</s:Rect>
		<s:Button id="btUploadBanner" buttonMode="true" click="uploadBannerPopup(event)"
				  skinClass="devdoo.sk.button.iconMini.UiButtonAddSkin" useHandCursor="true"/>
	</s:Group>
</s:Group>
