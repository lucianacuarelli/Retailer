<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:mx="library://ns.adobe.com/flex/mx"
			 alpha.disabled="0.5"
			 alpha.inactive="0.8"
			 alpha.disabledWithControlBar="0.5"
			 width="498" height="383">
	
	<s:states>
		<s:State name="normal" />
		<s:State name="inactive" stateGroups="inactiveGroup" />
		<s:State name="disabled" />
		<s:State name="normalWithControlBar" stateGroups="withControls" />
		<s:State name="inactiveWithControlBar" stateGroups="withControls, inactiveGroup" />
		<s:State name="disabledWithControlBar" stateGroups="withControls" />
		<s:State name="forgotPassword"/>
	</s:states>
	
	<!--- drop shadow can't be hittable so it stays sibling of other graphics @private-->
	<s:RectangularDropShadow id="dropShadow" left="0" right="0" top="0" bottom="0" alpha="0.32"
							 angle="90" blurX="20" blurY="20" color="0x000000" distance="11"
							 left.forgotPassword="0" right.forgotPassword="0" top.forgotPassword="0"
							 bottom.forgotPassword="0"
							 alpha.inactiveGroup="0.22" distance.inactiveGroup="7"
							 left.normal="0" right.normal="0" top.normal="0" bottom.normal="0"/>
	
	<s:Image id="loginScreen" source="@Embed('assets/splashScreen/bgLoginScreen.png')"/>
	
	<!--- drop shadow can't be hittable so all other graphics go in this group -->
	<s:Group left="0" right="0" top="0" bottom="0">
		
		<!--- top group mask @private-->
		<s:Group left="1" top="1" right="1" bottom="1" id="topGroupMask">
			<!--- @private-->
			<s:Rect id="topMaskRect" left="0" right="0" top="0" bottom="0"
					left.forgotPassword="0" right.forgotPassword="0" top.forgotPassword="-46"
					bottom.forgotPassword="46"
					left.normal="0" right.normal="0" top.normal="-46" bottom.normal="46">
				<s:fill>
					<s:SolidColor alpha="0"/>
				</s:fill>
			</s:Rect>
			<s:Button id="btForgotPassword" x="349" y="331" width="70" height="20"
					  label="Enviar" skinClass="devdoo.skins.groups.SkButtonLogin" 
					  visible="false" visible.forgotPassword="true"/>
			<s:TextInput id="tiUserEmail" y="300" width="160" height="22"
						 chromeColor="#BD0000" focusColor="#BD0000" fontSize="15"
						 horizontalCenter="96" visible="false" visible.forgotPassword="true"/>
		</s:Group>
		
		<!-- layer 3: contents -->
		<!--- Contains the vertical stack of title bar content and control bar. -->
		<s:Group left="0" right="0" top="0" bottom="0" id="contents" includeIn="normal, inactive, disabled">
			<s:Group id="contentGroup" width="100%" height="100%" minWidth="0" minHeight="0">
				<s:CheckBox id="cbKeepLogged" x="23" y="293" label="Mantenha-me conectado"
							buttonMode="true" useHandCursor="true"/>
				<s:Label id="lbForgotPassword" x="42" y="325" buttonMode="true" text="Esqueceu sua senha?"
						 useHandCursor="true"/>
				<s:Label id="btNewRegister" x="42" y="350" buttonMode="true"
						 text="Não sou cadastrado" useHandCursor="true"/>
			</s:Group>
		</s:Group>
	</s:Group>
	
	<s:Group right="50" bottom="0" includeIn="normal, inactive, disabled">
		<s:Group id="gpBackground" x="0" y="0">
			<s:Rect x="0" bottom="0" width="201" height="134" alpha="0.8"
					topLeftRadiusX="10" topRightRadiusX="10">
				<s:fill>
					<s:SolidColor color="#000000"/>
				</s:fill>
			</s:Rect>
			<s:Rect alpha="0.3" height="6.95" width="201" x="0" y="127">
				<s:fill>
					<s:SolidColor color="#000000"/>
				</s:fill>
			</s:Rect>
			<s:TextInput id="tiUserName" y="39" height="22" chromeColor="#BD0000"
						 focusColor="#BD0000" fontSize="15" horizontalCenter="0" tabIndex="1"
						 width="160"/>
			<s:TextInput id="tiUserPassword" y="68" width="160" height="22" chromeColor="#BD0000"
						 focusColor="#BD0000" fontSize="15" horizontalCenter="0" tabIndex="2" />
			<s:Button id="btEnter" x="22" y="100" width="70" height="20" label="Entrar"
					  skinClass="devdoo.skins.groups.SkButtonLogin" tabIndex="3" buttonMode="true" useHandCursor="true"/>
			<s:Button id="btCancel" styleName="btCancel" x="103" y="100" height="20" label="Cancelar"
					  skinClass="devdoo.skins.groups.SkButtonLogin" tabIndex="4"  buttonMode="true" useHandCursor="true"/>
		</s:Group>
		
		<s:Group id="gpTitle" x="0" y="0">
			<s:Rect alpha="0.6" height="30" topLeftRadiusX="10" topRightRadiusX="10" width="201" x="0" y="-0.05">
				<s:fill>
					<s:SolidColor color="#000000"/>
				</s:fill>
			</s:Rect>
			<s:RichText alpha="0.4" color="#FFFFFF" fontFamily="Verdana" fontSize="12" text="Identificação do usuário" x="25" y="8.95"/>
		</s:Group>	
	</s:Group>
</s:SparkSkin>