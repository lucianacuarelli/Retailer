<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:ui="devdoo.layout.ui.*"
			   xmlns:ui2="devdoo.ui.*"
			   width="100%" height="100%" creationComplete="create()">
	
	<fx:Style source="styles.css"/>
	
	<fx:Script>
		<![CDATA[
			import modules.lg.data.DataNotification;
			
			import skins.login.SkLoginSkin;
			//------------------------------------------------------------------
			//
			//  images
			//
			//------------------------------------------------------------------
			[Embed(source="assets/splashScreen/application.png")]
			[Bindable] public var application:Class;
			
			[Embed(source="assets/splashScreen/bgLoginScreen.png")]
			[Bindable] public var loginScreen:Class;
			
			//------------------------------------------------------------------
			//
			//  Methods
			//
			//------------------------------------------------------------------
			//----------------------------------
			//  create
			//----------------------------------
			/**
			 *  Evento executado no momento em que a aplicação for criada completamente.
			 *  Configura o gerenciador de módulos da aplicação
			 * 
			 *  @return void
			 */
			public function create():void
			{
				//Configura o gerenciador de módulo
				//Configura a utilização de tela de abertura em módulos
				useWebIndex.useModuleScreen(true, application)
					.useLogin(true, SkLoginSkin)
					
					//Configura o tipo de conexão default
					.connectServer('http://localhost/retailer')
					//.connectServer('http://beta.devdoo.com/retailer')
					//.connectServer('http://www.parceirolg.com.br')
					//.startTimer(5, DataNotification)
					
					//Inicializa a aplicação e um módulo default
					.startModule('lg', 'MdProducts');
				//.startModule('register', 'MdRegisterCollaborators');
				//.start();
			}
		]]>
	</fx:Script>
	<ui:UiWebIndex id="useWebIndex"/>
	<s:Scroller visible="false"/>
</s:Application>